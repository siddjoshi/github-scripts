# GitHub Active Committers Analyzer - Environment Configuration
# Copy this file to .env and update with your actual values

# Required: GitHub Personal Access Token
# Get yours from: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_TOKEN=your_github_token_here

# Optional: Default organization to analyze
# You can still override this with command line arguments
DEFAULT_ORG=your_default_org_name

# Optional: Default number of days to look back for activity
# Default: 365 days (1 year)
DEFAULT_DAYS=365

# Optional: GitHub API base URL (rarely needs to be changed)
# Default: https://api.github.com
GITHUB_API_URL=https://api.github.com

# Optional: Default output directory for reports
# Default: current directory
OUTPUT_DIR=./reports

# Optional: Enable debug mode for more verbose output
# Values: true, false
DEBUG=false

# Optional: Custom rate limit threshold (requests remaining before waiting)
# Default: 10
RATE_LIMIT_THRESHOLD=10

# Optional: Custom delay between API requests (seconds)
# Default: 0.1
API_DELAY=0.1
